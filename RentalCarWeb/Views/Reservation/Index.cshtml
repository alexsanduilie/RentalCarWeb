@model IEnumerable<RentalCarWeb.Models.DTO.Reservation>

@{
    ViewBag.Title = "Reservations List";
}

<h2>@ViewBag.Title</h2>

@Styles.Render("~/Content/tableStyle.css")
@Styles.Render("~/Content/commonStyle.css")
@Styles.Render("~/Content/errorStyle.css")
@Styles.Render("~/Content/buttonStyle.css")

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<a href='/Reservation/Index1'><button class=button>Opened Reservations</button></a>
<a href='/Reservation/Index2'><button class=button>Closed Reservations</button></a>
<a href='/Reservation/Index3'><button class=button>Cancelled Reservations</button></a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.carID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.carPlate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costumerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reservStatsID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.endDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.couponCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.carID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.carPlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costumerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reservStatsID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.couponCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { carID = item.carID, customerID = item.costumerID }) |
                @Html.ActionLink("Details", "Details", new { carID = item.carID, customerID = item.costumerID }) |
                @Html.ActionLink("Delete", "Delete", new { carID = item.carID, customerID = item.costumerID })
            </td>
        </tr>
    }

</table>
